@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="view-body">
    <h1 class="text-danger">Error.</h1>
    <h2 class="text-danger">An error occurred while processing your request.</h2>

    <img src="~/css/images/error_meme.jpg" alt="a funny meme" height="auto" width="max" />

    @if (Model.ShowRequestId)
    {
        <h4>Please provide this code to tech support, if you can.</h4>
        <p>
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <p>For help, reach out to <a href="mailto:technology@kicevents.com">technology@kicevents.com</a></p>
</div>
