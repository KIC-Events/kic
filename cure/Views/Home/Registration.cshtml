@model KiCData.Models.WebModels.RegistrationViewModel

<div class="view-body">
    <div class="container row">
        <h2 class="main-title">Register for CURE</h2>
    </div>
    <div class="container row">
        <h4 class="main-title">Ticket Types</h4>
        <p><b>There are several types of tickets available.</b></p>
        <div class="col-sm-4 button-box">
            <img src="~/css/images/ticket-1.png" alt="Ticket types" class="responsive" />
        </div>
        <div class="col-sm-4 button-box">
            <img src="~/css/images/ticket-2.png" alt="Ticket types" class="responsive" />
        </div>
        <div class="col-sm-4 button-box">
            <img src="~/css/images/ticket-3.png" alt="Ticket types" class="responsive" />
        </div>
    </div>
    <div class="container row">        
        <div class="col-sm-6">
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateOfBirth"></label>
                    <input asp-for="DateOfBirth" class="form-control" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SexOnID"></label>
                    <input asp-for="SexOnID" class="form-control" />
                    <span asp-validation-for="SexOnID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FetName"></label>
                    <input asp-for="FetName" class="form-control" />
                    <span asp-validation-for="FetName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClubId"></label>
                    <input asp-for="ClubId" class="form-control" />
                    <span asp-validation-for="ClubId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BadgeName"></label>
                    <input asp-for="BadgeName" class="form-control" />
                    <span asp-validation-for="BadgeName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="TicketType"></label>
                    <select asp-for="TicketType" class="form-control" asp-items="@Model.TicketTypes">
                        <option value="">Select Ticket Type</option>
                    </select>
                    <span asp-validation-for="TicketType" class="text-danger"></span>
                </div>
                @*<div class="form-group">
                    <label asp-for="IsStaying">Check this if you would like to eserve a /room at the host hotel.</label>
                    <input asp-for="IsStaying" type="checkbox" id="isStayingBox" />
                </div>*@
                <div class="form-group" id="roomTypeSelect">
                    <label asp-for="RoomType"></label>
                    <select asp-for="RoomType" class="form-control" asp-items="@Model.RoomTypes">
                        <option value="">Select Room Type</option>
                    </select>
                    <span asp-validation-for="RoomType"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WillVolunteer"></label>
                    <input asp-for="WillVolunteer" class="form-control" type="checkbox" />
                    <span asp-validation-for="WillVolunteer"></span>
                </div>
            </div>
        </div>
    </div>
</div>