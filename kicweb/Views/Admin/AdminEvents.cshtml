@model IEnumerable<KiCData.Models.Event>
@{
    ViewData["Title"] = "Events";
}

<div class="view-body">
    <h1 class="main-title">Events</h1>
    <hr />
    <p><b>KiC Events</b></p>
    <p>Click on the event name to view more details</p>
    <hr />
    <a asp-area="" asp-controller="Admin" asp-action="AdminEventCreate">New Event</a>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    Venue @Html.DisplayNameFor(model => model.Venue.Name)
                </th>
                <th>
                    Options
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-area="" asp-controller="Admin" asp-action="AdminEventDetails">@Html.DisplayFor(modelItem => item.Name)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Venue.Name)
                  
                    </td>
                    <td>
                        <a asp-area="" asp-controller="Admin" asp-action="AdminEventDetails" asp-route-id="@item.Id">Details</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
