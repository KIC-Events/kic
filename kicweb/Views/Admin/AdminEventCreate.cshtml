@{
    ViewData["Title"] = "New Event";
}
@model KiCData.Models.WebModels.EventViewModel

<div class="view-body">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-8">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-8">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-8">
                <label asp-for="EndDate"></label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-8">
                <label asp-for="Topic"></label>
                <input asp-for="Topic" class="form-control" />
                <span asp-validation-for="Topic" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-8">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-8">
                <label asp-for="VenueId"></label>
                <select asp-for="VenueId" asp-items="@Model.Venues">
                    <option value="">Select Venue</option>
                </select>
                <span asp-validation-for="VenueId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-8">
                <input type="submit" value="Add Event" class="btn btn-secondary" />
            </div>
        </div>
    </form>
</div>
