@page
@model kicweb.Models.IndexViewModel

<div class="view-body">
    <h1 class="main-title">Welcome Home</h1>
    <hr />
    <div class="landing-page">
        <div class="row">
            <div class="text-center">
                <h4>Welcome to KIC Events</h4>
                <h5>We are Kinky In Columbus</h5>
                <hr />
                <p>Kinky In Columbus is your home for sex positive kink parties and events in Columbus, Ohio.</p>
                <p>We host monthly parties that combine education and fetish fun with a focus on community building. We also host weekend long intesives, New To Kink classes and munches, and showcase area vendors.</p>
                <p>We believe strongly in building and maintaining a safe, informed, and healthy community. We are inclusive of all identities and lifestyles, and consent is the basis for everything we do. We offer education on a variety of topics, and offer experiential demonstrations of corporal play, electric play, and fire play.</p>
                <p>Learn about who we are and what we do on our <a asp-area="" asp-controller="Home" asp-action="About">About</a> page.</p>
                <p>Learn how to attend our events and purchase tickets <a asp-area="" asp-controller="Payment" asp-action="Purchase">here.</a></p>

            </div>
        </div>
    </div>
</div>

@if(!ViewBag.AgeGateCookieAccepted)
{
    <div id="AgeGateModal" class="modal">
        <div class="modal-content">
            <p>This site is intended only for persons 18 years of age or older.</p>
            <p>This site features content related to consensual adult sexuality. We do not condone or support abuse - in any form.</p>
            <p>By using this site you affirm that you are of age and the viewing of sexually explicit material is legal in your country, state, or city. </p>
            @using (Html.BeginForm())
            {
                @Html.HiddenFor(model => model.Consent, true)
                
                <p>
                    <button id="age-gate-button-accept" type="submit">Accept</button>
                    <button id="age-gate-button-decline">Decline</button>
                </p>
            }            
        </div>
    </div>
}

<script>
    var acceptBtn = document.getElementById("age-gate-button-accept");
    var declineBtn = document.getElementById("age-gate-button-decline");

    declineBtn.onclick = function(){
        window.location=('https://google.com')
    }
</script>