@{
    ViewData["Title"] = "Ticket Comps";
}
@model KiCData.Models.WebModels.CompViewModel


<div class="view-body">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-8">
                <label asp-for="CompQuantity"></label>
                <input asp-for="CompQuantity" class="form-control" />
                <span asp-validation-for="CompQuantity" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-8">
                <label asp-for="CompAmount"></label>
                <input asp-for="CompAmount" type="date" class="form-control" />
                <span asp-validation-for="CompAmount" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-8">
                <label asp-for="CompReason"></label>
                <input asp-for="CompReason" type="date" class="form-control" />
                <span asp-validation-for="CompReason" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-8">
                <label asp-for="AuthorizingUser"></label>
                <input asp-for="AuthorizingUser" class="form-control" />
                <span asp-validation-for="AuthorizingUser" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-8">
                <input type="submit" value="Add Comps" class="btn btn-secondary"
            </div>
    </form>
</div>
