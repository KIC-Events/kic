                            <a class="nav-link flat-btn" asp-area="" asp-controller="Home" asp-action="GetInvolved">Get Involved</a>
                        </li>
                        @*Issue #86 https://github.com/Malechus/kic/issues/86*@
                        @*
                        <li class="nav-item">
                            <a class="nav-link flat-btn" asp-area="" asp-controller="Presenter"
                                asp-action="Presenters">Presenters</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link flat-btn" asp-area="" asp-controller="Vendor"
                                asp-action="Vendors">Vendors</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link flat-btn" asp-area="" asp-controller="Volunteer"
                                asp-action="Volunteers">Volunteers</a>
                        </li>
                        *@
                        <li class="nav-item">
                            <a class="nav-link flat-btn" asp-area="" asp-controller="Home"
                                asp-action="Privacy">Privacy</a>
                        </li>
                       @if (User.IsInRole("Admin") || User.IsInRole("Contributor"))
                        {
                            <li class="nav-item">
                                <a class="nav-link flat-btn" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                            </li>
                        }
                        <span class="nav-spacer"></span>
                        <li>
                            <a href="https://dev.cure.kicevents.com"><img src="~/css/images/CURE/3.png" alt="CURE 2025 Logo, button to CURE web site." width="100px" height="100px" /></a>         
